@model SeriesApp.Models.Episode

@{
    ViewBag.Title = "Index";
}

<div class="container overlay">
    <h2>Index</h2>

    @using (Html.BeginForm())
    {
    <div class="form-horizontal">
        <h4>Episode</h4>
        <hr />


        <div class="form-group">
            <label class="col-sm-2 control-label"> Season no.:</label>
            <div class="col-sm-10">
                <div class="controls">
                    @Html.Editor("SeasonNo", new { htmlAttributes = new { @class = "form-control", @id = "SeasonNo" } })
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label"> Episodes no.:</label>
            <div class="col-sm-10">
                <div class="controls">
                    @Html.Editor("EpisodesNo", new { htmlAttributes = new { @class = "form-control", @id = "EpisodesNo" } })
                </div>
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="/Episodes/Add" class="btn btn-primary">Add</a>
            </div>
        </div>
    </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>