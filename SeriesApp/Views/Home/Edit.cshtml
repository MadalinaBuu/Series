@model SeriesApp.Models.Series
@{
    ViewBag.Title = "Edit";
    var username = User.Identity.Name;
}

<div class="container overlay">
    <a href="@Url.Action("Index", "Home")">Click here to go back</a>
    @using (Html.BeginForm())
    {<br />
        <div class="card" style="width: 18rem;">
            <div class="card-header">
                Item details
            </div>
            <div class="card-body">
                <div class="form-group">
                    <span>Edit item: </span>
                    <input type="text" name="name" class="form-control" value="@Model.Name" />
                </div>
                <div class="form-group">
                    <input name="source" value="@Model.Source" type="hidden">
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" name="check_public">
                    <label class="form-check-label" for="exampleCheck1">Public post?</label>
                </div>
                <br>
                <div class="form-group">
                    <input type="submit" value="Edit Item" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>
