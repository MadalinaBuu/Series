@model SeriesApp.Models.Users
@{
    ViewBag.Title = "Registration";
}

@using (Html.BeginForm())
{
    <br />
    <div class="card" style="width: 18rem;">
        <div class="card-header">
            Register
        </div>
        <div class="card-body">
            @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
            {
                <div class="alert alert-danger" role="alert">
                    <a class="close" data-dismiss="alert">×</a>
                    @foreach (var modelError in Html.ViewData.ModelState.SelectMany(keyValuePair => keyValuePair.Value.Errors))
                    {
                        <p>@modelError.ErrorMessage</p>
                    }
                </div>
            }

            <div class="form-group">
                @Html.LabelFor(u => u.Email)
                @Html.EditorFor(u => u.Email, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group">
                @Html.LabelFor(u => u.Password)<br>
                @Html.EditorFor(u => u.Password, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(u => u.Name)<br>
                @Html.EditorFor(u => u.Name, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(u => u.Country)<br>
                @Html.EditorFor(u => u.Country, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <p>
                <button type="submit" class="btn btn-primary float-right">Register</button>
            </p>
        </div>
    </div>
}
