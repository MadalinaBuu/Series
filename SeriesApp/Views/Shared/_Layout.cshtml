<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Series</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            @if (@User.Identity.IsAuthenticated)
            {
                @Html.ActionLink("Hello " + @User.Identity.Name + "!", "Index", "Home", new { @class = "navbar-brand" })
            }
            else
            {
                @Html.ActionLink("Login", "Index", "Home", new { @class = "navbar-brand" })
            }
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="nav navbar-nav ml-auto">
                    <li>
                        <a href="@Url.Action("Registration", "Auth")" class="nav-link">Register</a>
                    </li>
                    <li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a href="@Url.Action("Logout", "Auth")" class="nav-link">Logout </a>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @if (@User.Identity.IsAuthenticated && Request.Path != "/Auth/Registration" && Request.Path != "/Auth/Login" && !Request.Path.Contains("Edit"))
        {
            var Carousel = Html.Partial("~/Views/Home/_Carousel.cshtml");
            @Carousel
        }
        @RenderBody()
    </div>

    <footer style="position: fixed;">
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>

    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>